@model IEnumerable<BuscaHotel_Web.Models.Dto.HotelDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Hotéis</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Hotel" asp-action="CreateHotel" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Criar um novo Hotel</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Ocupação
                </th>
                <th>
                    Diária
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Ocupacao</td>
                    <td>@((item.Diaria).ToString("c"))</td>
                    <td>
                        <a asp-controller="Hotel" asp-action="UpdateHotel" asp-route-hotelId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-controller="Hotel" asp-action="DeleteHotel" asp-route-hotelId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>