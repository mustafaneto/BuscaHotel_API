@model BuscaHotel_Web.Models.Dto.HotelDTO

<form asp-action="DeleteHotel">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Excluir Hotel</h1>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">
            <div class="col-2">
                <label asp-for="Nome" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Nome" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Diaria" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Diaria" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Descricao" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Descricao" disabled class="form-control" rows="5"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="Ocupacao" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Ocupacao" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="ImagemUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImagemUrl" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Area" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Area" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Servicos" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Servicos" disabled class="form-control"></textarea>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexHotel" asp-controller="Hotel" class="btn-primary btn form-control">Voltar para lista</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Deletar" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}