@model BuscaHotel_Web.Models.VM.HotelNumberDeleteVM

<form asp-action="DeleteHotelNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Deletar Hotel</h1>
        <hr />
        <input hidden asp-for="HotelNumber.HotelNo" />
        <div class="row">

            <div class="col-2">
                <label asp-for="HotelNumber.HotelNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="HotelNumber.HotelNo" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="HotelNumber.HotelID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="HotelNumber.HotelID" disabled class="form-select" asp-items="@Model.HotelList">
                    <option disabled selected>--Escolha o Hotel--</option>

                </select>
            </div>
            <div class="col-2">
                <label asp-for="HotelNumber.DetalhesEspeciais" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="HotelNumber.DetalhesEspeciais" readonly class="form-control" rows="5"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexHotelNumber" asp-controller="HotelNumber" class="btn-primary btn form-control">Voltar para lista</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Deletar" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}