@model BuscaHotel_Web.Models.VM.HotelNumberCreateVM

<form asp-action="CreateHotelNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Criar Hotel</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="HotelNumber.HotelNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="HotelNumber.HotelNo" class="form-control" />
                <span asp-validation-for="HotelNumber.HotelNo" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="HotelNumber.HotelID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="HotelNumber.HotelID" class="form-select" asp-items="@Model.HotelList">
                    <option disabled selected>--Escolha o Hotel--</option>

                </select>
                <span asp-validation-for="HotelNumber.HotelID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="HotelNumber.DetalhesEspeciais" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="HotelNumber.DetalhesEspeciais" class="form-control" rows="5"></textarea>
                <span asp-validation-for="HotelNumber.DetalhesEspeciais" class="text-danger"></span>
            </div>
            
            <div class="col-5 offset-2">
                <a asp-action="IndexHotelNumber" asp-controller="HotelNumber" class="btn-primary btn form-control">Voltar para lista</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Adicionar" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}